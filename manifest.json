{
  "manifest_version": 2,
  "name": "Envi - the environment switch.",
  "description": "This extension allows you to switch",
  "version": "1.0",
  "options_page": "options.html",
  "icons": {
    "16": "test16.png"
  },
  "background": {
    "scripts": [
      "js/lodash.js",
      "js/eventPage.js"
    ]
  },
  "browser_action": {
    "default_icon": "test.png"
    /*,
       "default_popup": "popup.html"*/
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "contextMenus"
  ]
}
